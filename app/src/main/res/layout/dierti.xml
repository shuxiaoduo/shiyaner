<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/red"
    android:text="Red"
    android:padding="30dp"
    android:background="@color/colorRed"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orange"
        app:layout_constraintLeft_toRightOf="@id/red"
        app:layout_constraintRight_toLeftOf="@id/yellow"
        android:text="Orange"
        android:padding="30dp"
        android:background="@color/colorOrange"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yellow"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Yellow"
        android:padding="30dp"
        android:background="@color/colorYellow"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/green"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintRight_toLeftOf="@id/orange"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Green"
        android:padding="30dp"
        android:background="@color/colorGreen"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blue"
        android:layout_marginTop="30dp"
       app:layout_constraintTop_toBottomOf="@id/orange"
        app:layout_constraintLeft_toRightOf="@id/green"
        app:layout_constraintRight_toLeftOf="@id/purple"
        android:text="Blue"
        android:padding="30dp"
        android:background="@color/colorBlue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purple"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/orange"
        app:layout_constraintLeft_toRightOf="@id/orange"
        android:text="Purple"
        android:padding="30dp"
        android:background="@color/colorPurple"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pink"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/green"
        app:layout_constraintLeft_toRightOf="@id/orange"
        android:text="Pink"
        android:padding="30dp"
        android:background="@color/colorPink"
        />
</android.support.constraint.ConstraintLayout>
